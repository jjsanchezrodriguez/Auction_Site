

<%= form_for @product do |f|%>
	<div class="name-container">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	
	<div class="description-container">
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div>	

	<div class="description-container">
		<%= f.label :deadline %>
		<%= f.date_field :deadline %>
	</div>

	<div class="description-container">
		<%= f.label :user_id %>
		<%= f.text_field :user_id %>
	</div>

	<%= f.submit "Submit" %>

<%end%>

<br/>
<%= link_to "Back to Products", products_path %>


